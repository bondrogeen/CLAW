<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="mqtt_switch"
        android:summary="@string/mqtt_summary_switch"
        android:title="@string/mqtt_title" />

    <ListPreference
        android:defaultValue="TLS"
        android:entries="@array/mqtt_sec_list_titles"
        android:entryValues="@array/mqtt_sec_list_values"
        android:key="mqtt_list_sec"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/mqtt_sec" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="my.mqtt.com"
        android:inputType="textCapWords"
        android:key="mqtt_server"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/mqtt_server" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="1883"
        android:inputType="textCapWords"
        android:key="mqtt_port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/mqtt_port" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="admin"
        android:inputType="textCapWords"
        android:key="mqtt_login"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/mqtt_login" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="pass"
        android:inputType="textCapWords"
        android:key="mqtt_pass"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/mqtt_pass" />


</PreferenceScreen>
